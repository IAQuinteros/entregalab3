<div class="col-md-8 container">
  <h1 class="mb-4 text-center">Contáctame</h1>

  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
  <% end %>

  <%= form_with url: contact_path, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :nombre, "Nombre", class: "form-label" %>
      <%= form.text_field :nombre, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :correo, "Correo electrónico", class: "form-label" %>
      <%= form.email_field :correo, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :mensaje, "Mensaje", class: "form-label" %>
      <%= form.text_area :mensaje, class: "form-control", rows: 5, required: true %>
    </div>
    <div class="text-center">
      <%= form.submit "Enviar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>